<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_lista_funcionario"
    tools:context="br.com.webkoder.miniprojeto3.ListaFuncionario">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstFuncionario"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtPesquisar"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnPesquisar"
        android:layout_toStartOf="@+id/btnPesquisar" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="7dp"
        android:id="@+id/btnPesquisar"
        android:layout_alignBottom="@+id/edtPesquisar"
        android:layout_alignRight="@+id/lstFuncionario"
        android:layout_alignEnd="@+id/lstFuncionario"
        android:onClick="Pesquisar"
        android:background="@drawable/round_button"
        android:src="@drawable/ico_pesquisar"
        android:scaleType="fitXY"
        />
</RelativeLayout>

